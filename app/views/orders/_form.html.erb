<div class ="container">
<%= form_for(order) do |f| %>
<% if order.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

  <ul>
    <% order.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="form-order">
  <%= label_tag :item, "Item (cost/lb)" %>
  <%= select_tag :item, options_from_collection_for_select(@items, "id", "label"), include_blank: true %>
</div>

<div class="form-order">
  <%= f.label :amount_of_item, "Amount of item (lb)"%>
  <%= f.number_field :amount_of_item %>
</div>

<div class="wrapper">  
<%= f.submit class: "btn btn-primary btn-md", value: "SAVE ORDER"%>
</div>

<img id="image" src="/images/order.jpg"></img>

<% end %>
</div>



